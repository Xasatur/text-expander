{
    "manifest_version": 3,
    "name": "Simple Text Expander",
    "version": "1.0",
    "description": "Replaces shortcuts like -danke with full text.",
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "contextMenus"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_idle",
            "all_frames": true,
            "match_about_blank": true
        }
    ]
}
  